<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="96dp"
    android:layout_height="128dp"
    android:layout_gravity="center"
    app:cardCornerRadius="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/whatsAppVideoThumbnail"
            android:layout_width="96dp"
            android:layout_height="128dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/media_thumbnail"
            android:scaleType="fitXY"
            android:src="@drawable/ic_call_made" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:alpha="0.9"
            android:background="@color/white_color"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/videoSizeView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="2dp"
                android:textColor="@color/black_color"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/cloudImageView"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_done_blue" />

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:paddingRight="2dp" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>